<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/new_icontype"/>

            <TextView
                android:id="@+id/new_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_title"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/simple_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_date"/>

            <ImageView
                android:id="@+id/new_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/simple_space" />

            <ImageView
                android:id="@+id/new_icontype"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_menu_slideshow" />

            <TextView
                android:id="@+id/new_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_image"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_publisher"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/new_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_email"
                android:textColor="@android:color/black"
                android:layout_marginTop="14sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/new_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_title"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/new_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_title"
                android:gravity="right"/>

            <!--TODO Photo-->

            <TextView
                android:id="@+id/new_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_publisher"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/new_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_email"
                android:textColor="@android:color/black"
                android:layout_marginTop="14sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>